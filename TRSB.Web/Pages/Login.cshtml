@page "/login"
@model TRSB.Web.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h3>Login</h3>

<form method="post" asp-page-handler="Login">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label class="form-label">Username or Email</label>
        <input asp-for="Input.LoginValue" class="form-control" />
        <span asp-validation-for="Input.LoginValue" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Password</label>
        <input asp-for="Input.Password" type="password" class="form-control" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary w-100 mb-2">Login</button>
</form>

<a asp-page="/register" class="btn btn-link w-100">Register new account</a>

@if (!string.IsNullOrEmpty(Model.Error))
{
    <div class="alert alert-danger text-center">@Model.Error</div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}